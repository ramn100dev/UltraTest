                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/ultrakill"
                android:text="TIME:"
                android:textColor="#86FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
